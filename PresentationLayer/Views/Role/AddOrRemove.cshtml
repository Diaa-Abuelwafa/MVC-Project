@model List<UserCheckViewModel>

<h1>All Users</h1>

<br />
<br />

<form asp-controller="Role" asp-action="AddOrRemove">

    @for (int i = 0; i < Model.Count(); ++i)
    {
        <input hidden asp-for="@Model[i].Id"/>
        <input hidden asp-for="@Model[i].UserName"/>

        <div class="form-check">

            @if (Model[i].IsSelected)
            {
                <input asp-for="@Model[i].IsSelected"  checked class="form-check-input" type="checkbox">
            }
            else
            {
                <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox">
            }

            <label class="form-check-label">@Model[i].UserName</label>
        </div>
    }

    <br />

    <button type="submit" class="btn btn-primary">Save</button>
</form>

