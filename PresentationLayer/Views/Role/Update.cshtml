@model RoleViewModel

@{
    ViewData["Title"] = "Roles";
}

<h1>Edit Role Page</h1>

<br />
<br />

<form asp-controller="Role" asp-action="Update" enctype="multipart/form-data">

    <!--For Send The User ID-->
    <input hidden asp-for="Id" />

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <br />

    <a class="btn btn-success" asp-controller="Role" asp-action="AddOrRemove" asp-route-Id="@Model.Id">AddOrRemoveUser</a>

    <br />
    <br />

    <input class="btn btn-primary" type="submit" value="Save" />
    <a class="btn btn-light" asp-controller="Role" asp-action="Index">Back To List</a>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}