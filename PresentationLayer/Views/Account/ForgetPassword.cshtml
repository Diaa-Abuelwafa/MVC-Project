@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "Find Your Account";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center">Find Your Account</h3>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="SearchEmail">
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control" placeholder="Enter your Email Address" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <a class="btn btn-secondary active" asp-controller="Account" asp-action="Login">Cancel</a>
            </div>
        </div>
    </div>
</div>

<!--To Make A Client Side Validation-->
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
