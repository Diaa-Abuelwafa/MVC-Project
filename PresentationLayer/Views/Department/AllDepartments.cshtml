@model List<Department>

@{
    ViewData["Title"] = "Department";
}

<h1>All Departments</h1>

<br />
<br />

<a class="btn btn-primary" asp-controller="Department" asp-action="Add">Create Department</a>

<br />
<br />

@if(Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Date Of Creation</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                    <td><a class="btn btn-warning" asp-controller="Department" asp-action="Details" asp-route-id="@item.DepartmentId">Details</a></td>
                    <td><a class="btn btn-success" asp-controller="Department" asp-action="Update" asp-route-id="@item.DepartmentId">Update</a></td>
                    <td><a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="alert alert-danger">There Are No Departments Currently</h4>
}